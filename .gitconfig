[user]
	name = Ehtesh Choudhury
	email = ehtesh.choudhury@gmail.com

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[alias]
    # http://stackoverflow.com/a/9074343/198348
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

    # https://difftastic.wilfred.me.uk/git.html
    dshow = -c diff.external=difft show --ext-diff
    ddiff = -c diff.external=difft diff

[core]
    pager = delta
	autocrlf = false
	excludesFile = /Users/ehteshchoudhury/.gitignore

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = zdiff3

# https://dandavison.github.io/delta/get-started.html
# https://dandavison.github.io/delta/features-named-groups-of-settings.html
[delta]
    navigate = true
    features = unobtrusive-line-numbers decorations

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue

[delta "decorations"]
    file-decoration-style = yellow box
    hunk-header-decoration-style = none

[diff]
    colorMoved = default

[init]
	defaultBranch = main

