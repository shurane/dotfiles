// Place your key bindings in this file to override the defaults
[
    // don't show tab picker, see https://github.com/microsoft/vscode/issues/20295
    { "key": "ctrl+tab",         "command": "workbench.action.nextEditor" },
    { "key": "ctrl+shift+tab",   "command": "workbench.action.previousEditor"},
    
    { "key": "ctrl+g", "command": "editor.action.nextMatchFindAction", "when": "editorFocus || editorTextFocus" },
    { "key": "ctrl+shift+g", "command": "editor.action.previousMatchFindAction", "when": "editorFocus || editorTextFocus" },
    
    // https://stackoverflow.com/a/43206060/198348
    { "key": "ctrl+alt+b", "command": "workbench.action.toggleActivityBarVisibility" },
    
    { "key": "ctrl+e", "command": "", "when": "terminalFocus" },
    { "key": "ctrl+p", "command": "", "when": "terminalFocus" }
]
